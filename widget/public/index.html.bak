                <li><strong>▼ Minimize:</strong> Collapse ribbon (Space bar)</li>
                <li><strong>⏱️ Timer:</strong> Real-time call duration</li>
                <li><strong>🔔 Notifications:</strong> Status updates</li>
                <li><strong>⌨️ Keyboard Shortcuts:</strong> Full keyboard support</li>
            </ul>
        </div>
        
        <h3>📊 Event Log:</h3>
        <div id="event-log" class="code">Waiting for events...</div>
        
    </div>

    <!-- Load the widget -->
    <link rel="stylesheet" href="/static/css/main.ae417a60.css?v=1759690232">
    <script src="/static/js/main.384b2cab.js?v=1759690232"></script>
    <script>
        // Event log
        function logEvent(message) {
            const log = document.getElementById('event-log');
            const timestamp = new Date().toLocaleTimeString();
            const entry = `[${timestamp}] ${message}`;
            
            if (log.textContent === 'Waiting for events...') {
                log.textContent = entry;
            } else {
                log.textContent = entry + '\n' + log.textContent;
            }
        }
        
        // Initialize the ribbon
        setTimeout(() => {
            try {
                logEvent('🚀 Initializing IntalksAI Call Ribbon...');
                
                if (typeof ExotelCallRibbon === 'undefined') {
                    throw new Error('ExotelCallRibbon not loaded. Widget files may not be accessible.');
                }
                
                logEvent('✅ Widget JavaScript loaded successfully');
                
                ExotelCallRibbon.init({
                    apiKey: 'demo-api-key-789',
                    apiUrl: 'http://production.eba-tpbtmere.us-east-1.elasticbeanstalk.com',
                    position: 'bottom',
                    onCallEvent: function(event, data) {
                        logEvent(`📞 Call Event: ${event}`);
                        console.log('Call Event:', event, data);
                        
                        // Update status based on event
                        if (event === 'connected') {
                            document.getElementById('status').className = 'status success';
                            document.getElementById('status-text').textContent = '✅ Call connected!';
                        } else if (event === 'callEnded') {
                            document.getElementById('status').className = 'status';
                            document.getElementById('status-text').textContent = 'Ready for next call';
                        }
                    },
                    onReady: function() {
                        logEvent('✅ Ribbon initialized and ready!');
                        logEvent('🎯 Connected to API: production.eba-tpbtmere.us-east-1.elasticbeanstalk.com');
                        document.getElementById('status').className = 'status success';
                        document.getElementById('status-text').textContent = '✅ Ribbon loaded successfully! Click a customer to test.';
                    }
                });
                
                logEvent('⏳ Connecting to API server...');
            } catch (error) {
                logEvent('❌ Error: ' + error.message);
                document.getElementById('status').className = 'status error';
                document.getElementById('status-text').textContent = '❌ Failed to load ribbon: ' + error.message;
                console.error('Ribbon initialization error:', error);
            }
        }, 1500);
        
        // Select customer function
        function selectCustomer(name, phone, customerId) {
            logEvent(`👤 Selected: ${name} (${phone})`);
            
            // Highlight selected card
            document.querySelectorAll('.customer-card').forEach(card => {
                card.classList.remove('selected');
            });
            event.currentTarget.classList.add('selected');
            
            // Update ribbon with customer data
            try {
                if (typeof ExotelCallRibbon === 'undefined') {
                    throw new Error('ExotelCallRibbon not loaded');
                }
                
                ExotelCallRibbon.setCustomer({
                    phoneNumber: phone,
                    name: name,
                    customerId: customerId
                });
                logEvent(`✅ Customer loaded: ${name}`);
                
                // Update status
                document.getElementById('status').className = 'status';
                document.getElementById('status-text').textContent = `Ready to call ${name}`;
            } catch (error) {
                logEvent(`❌ Error: ${error.message}`);
            }
        }
        
        // Log page load
        logEvent('📄 Demo page loaded');
        logEvent('📦 Loading widget...');
    </script>
  </body>
</html>